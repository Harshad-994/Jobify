@using DAL.Data.Enums
@using JMS_Presentation.ViewModels
@model List<JobApplicationViewModel>;

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Job Applications";
}

@* modal for deleteing a application*@
<div class="modal fade" id="deleteApplicationModal" tabindex="-1" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete application</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this application?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn secondaryBtn" data-bs-dismiss="modal">No</button>
                <button type="button" class="btn primaryBtn confirmDelete">Yes</button>
            </div>
        </div>
    </div>
</div>

@* modal for updating the application status*@
<div class="modal fade" id="updateApplicationStatusModal" tabindex="-1" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h4 class="modal-title">Update Application Status</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body border-0">
                <p class="secondaryText mb-0">Select a new status for this job application.</p>
                <label class="fw500" for="">Status</label>
                <select class="form-select w-auto" id="updateApplicationFilterDropDown"
                    asp-items="@Html.GetEnumSelectList<ApplicationStatus>()">
                    <option selected disabled>Select Application Status</option>
                </select>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn secondaryBtn" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn primaryBtn saveBtn">Save</button>
            </div>
        </div>
    </div>
</div>

@* modal for updating the application status*@
<div class="modal fade" id="applicationInfoModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h4 class="modal-title">Candidate Information</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body border-0">
                <div class="d-flex gap-3 mb-3">
                    <span class="secondaryText fw500 textNoWrap">Cover Letter</span>
                    <textarea class="form-control coverLetter primaryText" disabled readonly rows="5"></textarea>
                </div>
                <div class="d-flex align-items-center gap-3 mb-2">
                    <span class="secondaryText fw500 textNoWrap">Resume Url</span>
                    <a class="resumeLink primaryText" target="_blank" href="">Click here to see resume</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content-body">
    <h2 class="primaryText mb-2">All Applications</h2>
    <div class="d-flex justify-content-end align-items-center gap-3 mb-4">
        <div class="position-relative">
            <input class="form-control searchInput" type="text" id="searchApplication" placeholder="Search" />
            <i class="fa-solid fa-magnifying-glass position-absolute end-0 top-0 pt-2 pe-2 fs-5"></i>
        </div>
        <select class="form-select w-auto" id="applicationFilterStatus"
            asp-items="@Html.GetEnumSelectList<ApplicationStatus>()">
            <option selected disabled>Select Application Status</option>
            <option value="@null">All</option>
        </select>
    </div>

    <div class="table-responsive">
        <table class="table" id="applicationTable">
            <thead class="">
                <tr>
                    <th>Job Title</th>
                    <th>Candidate Name</th>
                    <th>Applied At</th>
                    <th>Status</th>
                    <th>Update Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="6" class="primaryText text-center">No job applications found.</td>
                    </tr>
                }

                @foreach (JobApplicationViewModel application in Model)
                {
                    <tr data-id="@application.Id" data-statusId="@application.ApplicationStatus">
                        <td>
                            <div class="d-flex align-items-center gap-2">
                                <i class="fas fa-file-alt"></i>
                                @application.Title
                            </div>
                        </td>
                        <td>
                            @application.FirstName @application.LastName
                        </td>
                        <td>
                            @application.AppliedAt.ToString("dd-MM-yyyy")
                        </td>
                        <td>
                            @application.JobApplicationStatusName
                        </td>
                        <td>
                            <button data-bs-target="#updateApplicationStatusModal" data-bs-toggle="modal"
                                class="btn secondaryBtn changeApplicationStatusBtn">Update Status</button>
                        </td>
                        <td>
                            <div class="d-flex align-items-center gap-3 actions p-1">
                                <i data-bs-toggle="modal" data-bs-target="#applicationInfoModal"
                                    class="fa-regular fa-eye applicationInfoBtn"></i>
                                <i class="fas fa-trash deleteApplicationBtn" data-bs-toggle="modal"
                                    data-bs-target="#deleteApplicationModal"></i>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @if (Model.Count > 0)
    {
        <div class="" id="applicationPagination">
            @await Html.PartialAsync("_Pagination")
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            var currentPage = 1;
            var pageSize = $('#applicationPagination .pageSize').val() || 5;
            var totalPages = 1;
            var totalCount = 0;
            var searchText = "";
            var applicationStatus = null;

            function renderApplications(renderMarkup = true) {
                var filter = {
                    page: currentPage,
                    pageSize: pageSize,
                    SearchText: searchText,
                    ApplicationStatus: applicationStatus
                };
                $.ajax({
                    url: '@Url.Action("GetAllJobApplications", "JobApplication")' + "?" + $.param(filter),
                    type: 'GET',
                    success: function (res) {
                        totalCount = res?.totalCount;
                        totalPages = res?.totalPages;
                        currentPage = res?.page;
                        updatePagination();
                        if (!renderMarkup) {
                            return;
                        }
                        var applications = res?.items;
                        var tableBody = $('#applicationTable tbody');
                        tableBody.empty();
                        if (totalCount == 0) {
                            tableBody.append("<tr><td colspan='6' class='primaryText text-center'>No job applications found.</td></tr>");
                            $(".pagination").addClass("d-none");
                        }
                        else {
                            $(".pagination").removeClass("d-none");
                        }
                        applications.forEach(application => {
                            var row = `<tr data-id="${application.id}" data-statusId="${application.applicationStatus}">
                                                                                                                                                                                            <td>
                                                                                                                                                                                            <div class="d-flex align-items-center gap-2">
                                                                                                                                                                                            <i class="fas fa-file-alt"></i>
                                                                                                                                                                                            ${application.title}
                                                                                                                                                                                            </div>
                                                                                                                                                                                            </td>
                                                                                                                                                                                            <td>
                                                                                                                                                                                            ${application.firstName} ${application.lastName}
                                                                                                                                                                                            </td>
                                                                                                                                                                                            <td>
                                                                                                                                                                                            ${formatDateTimeToDate(application.appliedAt)}
                                                                                                                                                                                            </td>
                                                                                                                                                                                            <td>

                                                                                                                                                                                            ${application.jobApplicationStatusName}
                                                                                                                                                                                            </td>
                                                                                                                                                                                            <td>
                                                                                                                                                                                            <button data-bs-target="#updateApplicationStatusModal" data-bs-toggle="modal" class="btn secondaryBtn changeApplicationStatusBtn" >Update Status</button>
                                                                                                                                                                                            </td>
                                                                                                                                                                                            <td>
                                                                                                                                                                                            <div class="d-flex align-items-center gap-3 actions p-1">
                                                                                                                                                                                            <i data-bs-toggle="modal" data-bs-target="#applicationInfoModal" class="fa-regular fa-eye applicationInfoBtn"></i>
                                                                                                                                                                                            <i class="fas fa-trash deleteApplicationBtn" data-bs-toggle="modal"
                                                                                                                                                                                            data-bs-target="#deleteApplicationModal"></i>
                                                                                                                                                                                            </div>
                                                                                                                                                                                            </td>
                                                                                                                                                                                            </tr>`;
                            tableBody.append(row);
                        });
                    },
                    error: function (xhr, status, error) {
                        var errorObj = JSON.parse(xhr.responseText);
                        errorToast(errorObj.message);
                    }
                });
            }

            renderApplications(false);

            $(document).on('click', '.deleteApplicationBtn', function () {
                var applicationId = $(this).closest('tr').data('id');
                $("#deleteApplicationModal .confirmDelete").attr('applicationId', applicationId);
            });

            $(document).on('click', '#deleteApplicationModal .confirmDelete', function () {
                var applicationId = $(this).attr('applicationId');
                $.ajax({
                    url: '@Url.Action("DeleteApplication", "JobApplication")',
                    type: 'POST',
                    data: { applicationId: applicationId },
                    success: function (response) {
                        if (response?.success) {
                            successToast(response?.message);
                            if ($("#applicationTable tbody").find("tr").length == 1 && currentPage > 1) {
                                currentPage--;
                            }
                            renderApplications();
                            $("#deleteApplicationModal").modal("hide");
                        }
                    },
                    error: function (xhr, status, error) {
                        try {
                            var errorObj = JSON.parse(xhr.responseText);
                            errorToast(errorObj.message);
                        } catch (e) {
                            errorToast("An unknown error occurred.");
                        }
                    }
                });
            });

            function updatePagination() {
                $('#applicationPagination .pagination .stats').text(`Showing ${totalCount != 0 ? ((currentPage - 1) * pageSize) + 1 : 0}-${Math.min(currentPage * pageSize, totalCount)} of ${totalCount}`);
                $('#applicationPagination .pageSize').val(pageSize);

                // Enable/disable pagination buttons
                $('#applicationPagination .prev-page').prop('disabled', currentPage === 1);
                $('#applicationPagination .next-page').prop('disabled', currentPage === totalPages);
            }

            //to go on previous page
            $('#applicationPagination .prev-page').click(function () {
                if (currentPage > 1) {
                    currentPage--;
                    renderApplications()
                }
            });

            //to go on next page
            $('#applicationPagination .next-page').click(function () {
                if (currentPage < totalPages) {
                    currentPage++;
                    renderApplications();
                }
            });

            //changing the value of the pagesize on changing of the drop down
            $(document).on('change', '#applicationPagination .pageSize', function () {
                pageSize = $(this).val();
                currentPage = 1;
                renderApplications();
            });

            //searching the application
            $('#searchApplication').on('input', debounce(function () {
                searchText = $(this).val();
                currentPage = 1;
                renderApplications();
            }));

            //filtering the applications
            $('#applicationFilterStatus').on('change', function () {
                applicationStatus = $(this).val();
                currentPage = 1;
                renderApplications();
            })

            //to change application status
            $(document).on('click', '.changeApplicationStatusBtn', function () {
                var applicationId = $(this).closest('tr').data('id');
                var statusId = $(this).closest('tr').data('statusid');
                $("#updateApplicationStatusModal .saveBtn").attr('applicationId', applicationId);
                $("#updateApplicationFilterDropDown").val(statusId);
                console.log(statusId);

            });

            $(document).on('click', '#updateApplicationStatusModal .saveBtn', function () {
                var applicationId = $(this).attr('applicationId');
                var newStatus = $('#updateApplicationFilterDropDown').val();
                $.ajax({
                    url: '@Url.Action("UpdateApplicationStatus", "JobApplication")',
                    type: 'POST',
                    data: { applicationId: applicationId, newStatus: newStatus },
                    success: function (response) {
                        if (response?.success) {
                            successToast(response?.message);
                            renderApplications();
                        }
                    },
                    error: function (xhr, status, error) {
                        try {
                            var errorObj = JSON.parse(xhr.responseText);
                            errorToast(errorObj.message);
                        } catch (e) {
                            errorToast("An unknown error occurred.");
                        }
                    }
                });
                $("#updateApplicationStatusModal").modal("hide");
            });

            //getting application information
            $(document).on('click', '.applicationInfoBtn', function () {
                var applicationId = $(this).closest('tr').data('id');
                var params = {
                    applicationId: applicationId,
                };
                $.ajax({
                    url: '@Url.Action("GetJobApplication", "JobApplication")' + "?" + $.param(params),
                    type: 'GET',
                    success: function (res) {
                        console.log(res)
                        var coverLetter = res?.coverLetter;
                        var resumeUrl = res?.resumeUrl;
                        $("#applicationInfoModal .coverLetter").val(coverLetter);
                        $("#applicationInfoModal .resumeLink").attr('href', resumeUrl);
                    },
                    error: function (xhr, status, error) {
                        var errorObj = JSON.parse(xhr.responseText);
                        errorToast(errorObj.message);
                    }
                });
                $("#applicationInfoModal").modal("show");
            });

        });
    </script>
}